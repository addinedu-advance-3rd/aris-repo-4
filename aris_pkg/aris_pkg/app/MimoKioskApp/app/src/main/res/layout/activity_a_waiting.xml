<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink1"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/admin_mode_btn"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:onClick="showAdminPasswordDialog"
        android:text="관리자모드" />


    <ToggleButton
        android:id="@+id/language_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="top|right"
        android:layout_margin="0dp"
        android:background="@drawable/kor_img"
        android:padding="0dp"
        android:textOff=""
        android:textOn=""/>

    <TextView
        android:id="@+id/recognized_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음성" />

    <TextView
        android:id="@+id/waiting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="음성 인식 또는 터치로 주문을 시작하세요"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <FrameLayout
        android:id="@+id/touch_area"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/pink2" />

    <Button
        android:id="@+id/voice_service_btn"
        android:layout_width="192dp"
        android:layout_height="55dp"
        android:text="음성 서비스" />

</LinearLayout>
